{
    "compilerOptions": {
        "target": "ESNext",
        "moduleResolution": "node",
        "types": ["node", "chrome"],
        "allowJs": false,
        "jsx": "react",
        "esModuleInterop": true,
        "removeComments": false,
        "strict": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}